<h1>Listing servers</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>ID</th>
      <th>IP address</th>
      <th>Region</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.type %></td>
        <td><%= server.provider_id %></td>
        <td><%= server.ip_address %></td>
        <td><%= server.region %></td>
        <td><%= link_to 'Manage', server.manage_url %></td>
        <td><%= link_to 'Show', server %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Server', new_server_path %>
